// Compare populations founded by 1 vs. ~20 heterozygous mothers
// Prediction: Multi-founder pops purge load faster, move towards HWE faster

// Set Up

initialize(){

defineConstant("N", 500);
defineConstant("BURN_IN_GEN", 5000);
defineConstant("EXP_GEN", 50);
defineConstant("NUM_REPS", 10);
defineConstant("NUM_FOUNDERS_MF", 20);
defineConstant("OUTPUT_FILE", "SLiM_AO_output.txt");
defineConstant("GENOME_LENGTH", 11000000);

initializeMutationRate(1e-7);
initializeMutationType("m_inv", 0.5, "f", 0.0);
initializeGenomicElementType("g1", m_inv, 0.0);
initializeGenomicElement(g1, 0, GENOME_LENGTH-1);

defineConstant("S_DEL", 0.01);
defineConstant("H_DEL", 0.02);
defineConstant("U_DEL_TOTAL", 0.05);
defineConstant("U_DEL_PER_BASE", U_DEL_TOTAL / GENOME_LENGTH);
initializeMutationType("m_del", 0.5, "g", -S_DEL, H_DEL);
initializeGenomicElementType("g_del", m_del, U_DEL_PER_BASE);
initializeGenomicElement(g_del, 0, GENOME_LENGTH-1);

initializeInversionMutation(m_inv, 0, GENOME_LENGTH-1);
initializeRecombinationRate(0);

initializeSex("XX");
initializePopulationSize(N);

writeFile(OUTPUT_FILE, "Gen Treatment Replicate InvFreq Ho He Fis");

}






















